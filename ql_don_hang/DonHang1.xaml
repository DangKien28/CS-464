
<Page x:Class="DA_002.DonHang1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DA_002"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="DonHang">
    <DockPanel Background="#F2F6FC" LastChildFill="True">
        <Grid Margin="5" x:Name="grid10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>

                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="2" Margin="10"
                    BorderBrush="#E0E6F0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
                        <TextBlock Text="🛒" FontSize="36" Margin="0 0 10 0"/>
                        <TextBlock Text="Quản lý đơn hàng" FontSize="25" FontWeight="Bold" Foreground="#2C3E50"/>
                    </StackPanel>
                    <Border Background="#F7F9FC"
                            CornerRadius="10"
                            BorderBrush="#DCE3EC"
                            BorderThickness="1"
                            Padding="02"
                            Margin="0 0 0 10">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="🔍" Margin="0 0 5 0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSearch"
                                      BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="14"
                                 VerticalAlignment="Center" Width="1053" />
                            <Button Content="Tìm"
                                    Width="70"
                                    Height="32"
                                    Background="#3498DB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Margin="10 0 0 0"
                                    DockPanel.Dock="Right"
                                    Cursor="Hand" HorizontalAlignment="Right"
                                    Click="tim_click"/>
                        </DockPanel>
                    </Border>
                    <GroupBox Header="Thông tin đơn hàng"
                              Margin="5"
                              Padding="10"
                              Background="White">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Mã đơn hàng:" Grid.Row="0"/>
                            <TextBox x:Name="txt1" Grid.Row="0" Grid.Column="1" Margin="5"/>
                            <Label Content="Mã khách hàng:" Grid.Row="1"/>
                            <TextBox x:Name="txt2" Grid.Row="1" Grid.Column="1" Margin="5"/>
                            <Label Content="Tên khách hàng:" Grid.Row="2"/>
                            <TextBox x:Name="txt3" Grid.Row="2" Grid.Column="1" Margin="5,7,5,3"/>
                            <Label Content="Số điện thoại:" Grid.Row="3"/>
                            <TextBox x:Name="txt4" Grid.Row="3" Grid.Column="1" Margin="5"/>
                            <Label Content="Địa chỉ:" Grid.Row="4"/>
                            <TextBox x:Name="txt5" Grid.Row="4" Grid.Column="1" Margin="5"/>
                            <Label Content="Ngày đặt:" Grid.Row="5"/>
                            <DatePicker x:Name="ngay" Grid.Row="5" Grid.Column="1" Margin="5"/>
                            <Label Content="Nhân viên:" Grid.Row="6"/>
                            <TextBox x:Name="txt6" Grid.Row="6" Grid.Column="1" Margin="5"/>
                            <Label Content="Trạng thái:" Grid.Row="7"/>
                            <ComboBox x:Name="box1" Grid.Column="1" Grid.Row="7" Margin="5">
                                <ComboBoxItem Content="Chờ xác nhận"/>
                                <ComboBoxItem Content="Đang giao"/>
                                <ComboBoxItem Content="Hoàn thành"/>
                                <ComboBoxItem Content="Hủy"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </Border>
            <DataGrid Grid.Row="2"
                      Margin="5"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      x:Name="tblbang"
                      HeadersVisibility="Column"
                      Background="White"
                      BorderBrush="#D0D7E2"
                      BorderThickness="1"
                      RowHeight="35"
                      AlternatingRowBackground="#F7F9FC"
                      ColumnHeaderHeight="40" SelectionChanged="Tblbang_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã đơn" Binding="{Binding madon}" Width="*" />
                    <DataGridTextColumn Header="Mã KH" Binding="{Binding makh}" Width="*" />
                    <DataGridTextColumn Header="Tên KH" Binding="{Binding tenkh}" Width="*" />
                    <DataGridTextColumn Header="SĐT" Binding="{Binding sdt}" Width="*" />
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding diachi}" Width="*" />
                    <DataGridTextColumn Header="Ngày đặt" Binding="{Binding ngaydat}" Width="*" />
                    <DataGridTextColumn Header="Nhân viên" Binding="{Binding manv}" Width="*" />
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding trangthai}" Width="*" />
                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding TongTien, StringFormat=N0}" Width="*"/>
                    <DataGridTemplateColumn Header="Thao tác" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Xem"
                                            Margin="2"
                                            Width="50"
                                            Height="25"
                                            Background="#2980B9"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Click="xem_click"/>
                                    <Button Content="Xóa"
                                            Margin="2"
                                            Width="50"
                                            Height="25"
                                            Background="#E74C3C"
                                            Foreground="White"
                                            BorderThickness="0" Click="xoa_click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="3" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Tạo đơn hàng"
                        Grid.Column="0"
                        Height="40"
                        Margin="10"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="Them_click"/>
                <Button Content="Sửa đơn hàng"
                        Grid.Column="1"
                        Height="40"
                        Margin="10"
                        Background="#F1C40F"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="Sua_click"/>
            </Grid>
        </Grid>
        <Frame x:Name="Mainfram1"
               Visibility="Collapsed"
               NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Page>
