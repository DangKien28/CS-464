<Page x:Class="Project_CS464.QLyNv"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_CS464"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BaoCao">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox x:Name="cbMode" Width="150" Height="35" Margin="0,0,15,0" SelectedIndex="0">
                <ComboBoxItem Content="Theo ngày"/>
                <ComboBoxItem Content="Theo tháng"/>
                <ComboBoxItem Content="Theo năm"/>
            </ComboBox>
            <DatePicker x:Name="datePicker" Width="200" Height="35"/>
            <Button Content="Cập nhật" Width="120" Height="35" Margin="15,0,0,0"
                    Background="#0078D7" Foreground="White" Click="BtnCapNhat_Click"/>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,20,0,0">

            <Border Background="White" CornerRadius="8" BorderBrush="#d0d0d0" BorderThickness="1"
                    Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Tổng nhập" FontSize="18" FontWeight="Bold" />
                    <TextBlock x:Name="txtTongNhap" Text="0" FontSize="26" FontWeight="SemiBold"
                               Margin="0,10,0,0" Foreground="#0078D7"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="8" BorderBrush="#d0d0d0" BorderThickness="1"
                    Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Tổng bán" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTongBan" Text="0" FontSize="26" FontWeight="SemiBold"
                               Margin="0,10,0,0" Foreground="#28A745"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="8" BorderBrush="#d0d0d0" BorderThickness="1"
                    Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Lợi nhuận" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtLoiNhuan" Text="0" FontSize="26"
                               Margin="0,10,0,0" Foreground="#FF9800"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="8" BorderBrush="#d0d0d0" BorderThickness="1"
                    Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Số đơn" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtSoDon" Text="0" FontSize="26"
                               Margin="0,10,0,0" Foreground="#673AB7"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="8" BorderBrush="#d0d0d0" BorderThickness="1"
                    Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Top sản phẩm" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTopSP" Text="Không có dữ liệu"
                               FontSize="20" Margin="0,10,0,0" Foreground="#E91E63"/>
                </StackPanel>
            </Border>

        </UniformGrid>

    </Grid>
</Page>
