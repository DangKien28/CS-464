<Window x:Class="Project_CS464.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_CS464"
        xmlns:vm="clr-namespace:Project_CS464.ViewModel"
        mc:Ignorable="d"
        Name="mainWindow"
        Title="Shoes Shop" Height="674.729" Width="1172.094">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="680*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Column="0" VerticalAlignment="Stretch" Background="DeepSkyBlue">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>

            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="DeepSkyBlue"/>
                    <Setter Property="Margin" Value="0, 0, 0, 10"/>
                    <Setter Property="BorderThickness" Value="5"/>

                </Style>
            </Menu.Resources>

            <MenuItem Header="Tổng quan"/>
            <MenuItem Header="Đơn hàng" Click="openDonHangPage"/>
            <MenuItem Header="Sản phẩm" Click="openSanPhamPage"/>
            <MenuItem Header="Thống kê" Click="openBaoCaoPage"/>
            <MenuItem Header="Nhân viên" Click="openQLNVPage"/>
            <MenuItem Header="Đăng xuất" Command="{Binding LogoutCommand}" CommandParameter="{Binding ElementName=mainWindow}"/>
            <MenuItem Header="Đề xuất AI" Click="openAIPage"/>
        </Menu>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>
    </Grid>

</Window>
