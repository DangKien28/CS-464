<Page x:Class="Project_CS464.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_CS464"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="950"
      Title="Page1">

    <Border BorderBrush="#4C6EF5"
            BorderThickness="3"
            CornerRadius="15"
            Padding="15">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================== HEADER ================== -->
            <DockPanel Grid.Row="0" Margin="0 0 0 20">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="📦" FontSize="30" Margin="0 0 10 0"/>
                    <TextBlock Text=" Quản lý sản phẩm"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="28"
                               Margin="10 0 0 0"/>
                </StackPanel>

                <Button Content="+ Nhập hàng mới"
                        Click="btnNhapHang_Click"
                        HorizontalAlignment="Right"
                        Padding="15 8"
                        Margin="10 0 0 0"
                        Background="#4C6EF5"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="265"/>
            </DockPanel>

            <!-- ================== SEARCH + FILTER ================== -->
            <Grid Grid.Row="1" Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>
                <Button Content="🔍" Width="43" Height="30" HorizontalAlignment="Right" Margin="0,7,0.4,7"/>
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0 0 45 0">
                    <TextBox x:Name="txtSearch"
                        TextChanged="txtSearch_TextChanged"
                        FontSize="14"
                             Margin="-10,0,10.4,0"/>

                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="10">
                    <ComboBox x:Name="cboHang"
                              FontSize="14"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Tất cả hãng"/>
                        <ComboBoxItem Content="Nike"/>
                        <ComboBoxItem Content="Adidas"/>
                        <ComboBoxItem Content="Puma"/>
                        <ComboBoxItem Content="Vans"/>
                    </ComboBox>
                </Border>
            </Grid>

            <!-- ================== DATA TABLE ================== -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
                <DataGrid x:Name="dgSanPham"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column" Margin="0.4,6.4,0,-5.8">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="MÃ SP" Binding="{Binding MaSP}" Width="100"/>
                        <DataGridTextColumn Header="HÃNG" Binding="{Binding Hang}" Width="*"/>
                        <DataGridTextColumn Header="MẪU GIÀY" Binding="{Binding MauGiay}" Width="*"/>
                        <DataGridTextColumn Header="SIZE" Binding="{Binding Size}" Width="80"/>
                        <DataGridTextColumn Header="SỐ LƯỢNG" Binding="{Binding SoLuong}" Width="100"/>
                        <DataGridTextColumn Header="GIÁ" Binding="{Binding Gia}" Width="120"/>
                        <DataGridTextColumn Header="NGÀY NHẬP" Binding="{Binding NgayNhap}" Width="150"/>

                        <DataGridTemplateColumn Header="THAO TÁC" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Width="60" Height="30"
                                                Content="Sửa"
                                                Background="#4C6EF5"
                                                Foreground="White"
                                                Click="Edit_Click"/>
                                        <Button Width="60" Height="30"
                                                Content="Xóa"
                                                Background="#E03131"
                                                Foreground="White"
                                                Margin="10 0 0 0"
                                                Click="Delete_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>

        </Grid>

    </Border>

</Page>
